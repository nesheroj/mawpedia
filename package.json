{
  "name": "mawpedia",
  "version": "1.0.0",
  "description": "",
  "main": "src/server/index.js",
  "repository": {
    "url": "nesukun/mawpedia"
  },
  "bugs": {
    "url": "https://github.com/nesukun/mawpedia/issues"
  },
  "engines": {
    "node": "^5.4.0",
    "npm": "^3.3.12"
  },
  "scripts": {
    "circle": "concurrently -r \"npm run test\" \"npm run lint\"",
    "dev": "concurrently -r \"npm run watch\" \"npm run tdd\"",
    "lint": "xo",
    "migration": "node -r babel-register -r babel-polyfill scripts/migration.js",
    "start": "node src/server/index.js",
    "tdd": "nodemon --exec \"npm run testlocal && npm run lint\"",
    "test": "nyc ava --check-coverage --tap | tap-diff && nyc report --reporter=text-lcov > coverage.lcov",
    "testlocal": "ava --tap | tap-notify | tap-diff",
    "watch": "nodemon --debug"
  },
  "author": "",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@angular/common": "^2.0.0-rc.5",
    "@angular/compiler": "^2.0.0-rc.5",
    "@angular/core": "^2.0.0-rc.5",
    "@angular/forms": "^0.3.0",
    "@angular/http": "^2.0.0-rc.5",
    "@angular/platform-browser": "^2.0.0-rc.5",
    "@angular/platform-browser-dynamic": "^2.0.0-rc.5",
    "@angular/router": "^3.0.0-rc.1",
    "@angular2-material/button": "^2.0.0-alpha.7-2",
    "@angular2-material/button-toggle": "^2.0.0-alpha.7-2",
    "@angular2-material/card": "^2.0.0-alpha.7-2",
    "@angular2-material/checkbox": "^2.0.0-alpha.7-2",
    "@angular2-material/core": "^2.0.0-alpha.7-2",
    "@angular2-material/grid-list": "^2.0.0-alpha.7-2",
    "@angular2-material/icon": "^2.0.0-alpha.7-2",
    "@angular2-material/input": "^2.0.0-alpha.7-2",
    "@angular2-material/list": "^2.0.0-alpha.7-2",
    "@angular2-material/menu": "^2.0.0-alpha.7-2",
    "@angular2-material/progress-bar": "^2.0.0-alpha.7-2",
    "@angular2-material/progress-circle": "^2.0.0-alpha.7-2",
    "@angular2-material/radio": "^2.0.0-alpha.7-2",
    "@angular2-material/sidenav": "^2.0.0-alpha.7-2",
    "@angular2-material/slide-toggle": "^2.0.0-alpha.7-2",
    "@angular2-material/slider": "^2.0.0-alpha.7-2",
    "@angular2-material/tabs": "^2.0.0-alpha.7-2",
    "@angular2-material/toolbar": "^2.0.0-alpha.7-2",
    "@angular2-material/tooltip": "^2.0.0-alpha.7-2",
    "angulartics2": "^1.1.2",
    "autoprefixer": "^6.3.7",
    "babel-core": "^6.8.0",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.8.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-es2015-node": "^6.1.0",
    "babel-preset-stage-1": "^6.5.0",
    "babel-register": "^6.8.0",
    "babel-root-import": "^4.0.1",
    "babel-runtime": "^6.6.1",
    "base-64": "^0.1.0",
    "config": "^1.20.1",
    "css-loader": "^0.23.1",
    "es6-shim": "^0.35.0",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.16.1",
    "ioredis": "^2.3.0",
    "joi": "^9.0.4",
    "json-loader": "^0.5.4",
    "jsonpack": "^1.1.5",
    "jsonwebtoken": "^7.1.9",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.0.0",
    "koa-compress": "^2.0.0",
    "koa-favicon": "^2.0.0",
    "koa-helmet": "^2.0.0",
    "koa-json": "^2.0.2",
    "koa-router": "^7.0.1",
    "koa-send": "^3.2.0",
    "koa-static": "^3.0.0",
    "lodash": "^4.15.0",
    "ng2-translate": "^3.1.2",
    "node-sass": "^3.7.0",
    "node-uuid": "^1.4.7",
    "notp": "^2.0.3",
    "postcss-loader": "^0.10.1",
    "raw-loader": "^0.5.1",
    "remarkable": "^1.6.2",
    "rxjs": "^5.0.0-beta.11",
    "sass-loader": "^4.0.0",
    "stats-webpack-plugin": "^0.4.2",
    "string-replace-loader": "^1.0.3",
    "style-loader": "^0.13.1",
    "webpack": "^2.1.0-beta.21",
    "zone.js": "^0.6.14"
  },
  "devDependencies": {
    "ava": "^0.14.0",
    "concurrently": "^2.2.0",
    "jsdom": "^9.4.2",
    "node-fetch": "^1.6.0",
    "nodemon": "^1.10.1",
    "nyc": "^8.1.0",
    "supertest": "^2.0.0",
    "tap-diff": "^0.1.1",
    "tap-notify": "^1.0.0",
    "thirty-two": "^1.0.2",
    "xo": "^0.16.0"
  },
  "ava": {
    "babel": "inherit",
    "files": [
      "test/*/"
    ],
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "plugins": [
      [
        "babel-root-import",
        "transform-decorators-legacy"
      ]
    ],
    "presets": [
      "es2015-node",
      "stage-1"
    ],
    "sourceMaps": true
  },
  "nyc": {
    "include": [
      "src"
    ]
  },
  "xo": {
    "envs": [
      "browser",
      "node"
    ],
    "esnext": true,
    "globals": [
      "__DEVELOPMENT__",
      "__PRODUCTION__",
      "__dirname"
    ],
    "ignores": [
      "static/**"
    ],
    "space": 2,
    "rules": {
      "ava/no-ignored-test-files": [
        0
      ],
      "padded-blocks": [
        2,
        "always"
      ],
      "no-implicit-coercion": [
        2,
        {
          "boolean": false
        }
      ],
      "no-negated-condition": [
        0
      ],
      "no-unused-expressions": [
        2,
        {
          "allowShortCircuit": true
        }
      ],
      "no-unused-vars": [
        2,
        {
          "vars": "all",
          "args": "none"
        }
      ],
      "babel/object-curly-spacing": [
        2,
        "always"
      ]
    }
  }
}
