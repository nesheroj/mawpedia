{
  "name": "mawpedia",
  "version": "1.0.0",
  "description": "",
  "main": "src/server/index.js",
  "repository": {
    "url": "nesukun/mawpedia"
  },
  "bugs": {
    "url": "https://github.com/nesukun/mawpedia/issues"
  },
  "engines": {
    "node": "^5.4.0",
    "npm": "^3.3.12"
  },
  "scripts": {
    "circle": "concurrently -r \"npm run test\" \"npm run lint\"",
    "dev": "concurrently -r \"npm run watch\" \"npm run tdd\"",
    "lint": "xo",
    "postinstall": "echo 'done'",
    "start": "node src/server/index.js",
    "tdd": "nodemon --exec \"npm run testlocal && npm run lint\"",
    "test": "nyc ava --check-coverage && nyc report --reporter=text-lcov > coverage.lcov",
    "testlocal": "ava --tap | tap-notify | tap-diff",
    "watch": "nodemon --debug"
  },
  "author": "",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@angular2-material/button": "^2.0.0-alpha.3",
    "@angular2-material/card": "^2.0.0-alpha.3",
    "@angular2-material/checkbox": "2.0.0-alpha.3",
    "@angular2-material/core": "^2.0.0-alpha.3",
    "@angular2-material/input": "^2.0.0-alpha.3",
    "@angular2-material/list": "^2.0.0-alpha.3",
    "@angular2-material/progress-circle": "^2.0.0-alpha.3",
    "@angular2-material/radio": "^2.0.0-alpha.3",
    "@angular2-material/sidenav": "^2.0.0-alpha.3",
    "@angular2-material/toolbar": "^2.0.0-alpha.3",
    "angular2": "^2.0.0-beta.17",
    "angular2-universal-preview": "^0.86.1",
    "autoprefixer": "^6.3.6",
    "babel": "^6.5.2",
    "babel-core": "^6.7.7",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015-node": "^4.0.2",
    "babel-preset-es2015-webpack": "^6.4.1",
    "babel-preset-stage-1": "^6.5.0",
    "babel-register": "^6.7.2",
    "babel-root-import": "^3.2.2",
    "babel-runtime": "^6.6.1",
    "config": "^1.20.1",
    "css-loader": "^0.23.1",
    "es6-shim": "^0.35.0",
    "file-loader": "^0.8.5",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.16.0",
    "ioredis": "^1.15.1",
    "joi": "^8.0.5",
    "json-loader": "^0.5.4",
    "jsonwebtoken": "^6.2.0",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.0.0",
    "koa-compress": "^2.0.0",
    "koa-favicon": "^2.0.0",
    "koa-helmet": "^1.0.0",
    "koa-json": "^2.0.2",
    "koa-router": "^7.0.1",
    "koa-send": "^3.2.0",
    "koa-static": "^3.0.0",
    "lodash": "^4.11.1",
    "node-sass": "^3.6.0",
    "node-uuid": "^1.4.7",
    "notp": "^2.0.3",
    "postcss-loader": "^0.9.0",
    "preboot": "2.0.6",
    "raw-loader": "^0.5.1",
    "remarkable": "^1.6.2",
    "rxjs": "^5.0.0-beta.7",
    "sass-loader": "^3.2.0",
    "stats-webpack-plugin": "^0.3.1",
    "style-loader": "^0.13.1",
    "webpack": "^2.1.0-beta.5",
    "zone.js": "^0.6.12"
  },
  "devDependencies": {
    "ava": "^0.14.0",
    "concurrently": "^2.0.0",
    "nodemon": "^1.9.2",
    "nyc": "^6.4.1",
    "supertest": "^1.2.0",
    "tap-diff": "^0.1.1",
    "tap-notify": "^1.0.0",
    "xo": "^0.15.0"
  },
  "ava": {
    "babel": "inherit",
    "files": [
      "test/*/"
    ]
  },
  "babel": {
    "plugins": [
      [
        "babel-root-import",
        "transform-decorators-legacy"
      ]
    ],
    "presets": [
      "es2015-node",
      "stage-1"
    ],
    "sourceMaps": true
  },
  "nyc": {
    "include": [
      "src"
    ]
  },
  "xo": {
    "envs": [
      "browser",
      "node"
    ],
    "esnext": true,
    "globals": [
      "__DEVELOPMENT__",
      "__PRODUCTION__",
      "__dirname"
    ],
    "ignores": [
      "static/**"
    ],
    "space": 2,
    "rules": {
      "ava/no-ignored-test-files": [
        0
      ],
      "padded-blocks": [
        2,
        "always"
      ],
      "no-implicit-coercion": [
        2,
        {
          "boolean": false
        }
      ],
      "no-negated-condition": [
        0
      ],
      "no-unused-expressions": [
        2,
        {
          "allowShortCircuit": true
        }
      ],
      "no-unused-vars": [
        2,
        {
          "vars": "all",
          "args": "none"
        }
      ],
      "babel/object-curly-spacing": [
        2,
        "always"
      ]
    }
  }
}
