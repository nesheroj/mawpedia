{
  "name": "mawpedia",
  "version": "1.0.0",
  "description": "",
  "main": "src/server/index.js",
  "repository": {
    "url": "nesukun/mawpedia"
  },
  "bugs": {
    "url": "https://github.com/nesukun/mawpedia/issues"
  },
  "engines": {
    "node": "^5.4.0",
    "npm": "^3.3.12"
  },
  "scripts": {
    "circle": "concurrently -r \"npm run test\" \"npm run lint\"",
    "dev": "concurrently -r \"npm run watch\" \"npm run tdd\"",
    "lint": "xo",
    "migration": "node -r babel-register -r babel-polyfill scripts/migration.js",
    "start": "node src/server/index.js",
    "tdd": "nodemon --exec \"npm run testlocal && npm run lint\"",
    "test": "nyc ava --check-coverage && nyc report --reporter=text-lcov > coverage.lcov",
    "testlocal": "ava",
    "watch": "nodemon"
  },
  "author": "",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@angular/common": "^2.1.2",
    "@angular/compiler": "^2.1.2",
    "@angular/core": "^2.1.2",
    "@angular/forms": "^2.1.2",
    "@angular/http": "^2.1.2",
    "@angular/platform-browser": "^2.1.2",
    "@angular/platform-browser-dynamic": "^2.1.2",
    "@angular/router": "^3.1.2",
    "@angular/material": "2.0.0-alpha.10",
    "angulartics2": "^1.4.2",
    "autoprefixer": "^6.5.3",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.7",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-es2016": "^6.16.0",
    "babel-preset-es2017": "^6.16.0",
    "babel-preset-es2015-node": "^6.1.1",
    "babel-preset-stage-1": "^6.16.0",
    "babel-register": "^6.16.3",
    "babel-runtime": "^6.11.6",
    "base-64": "^0.1.0",
    "config": "^1.24.0",
    "css-loader": "^0.25.0",
    "es6-shim": "^0.35.1",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.24.1",
    "ioredis": "^2.4.0",
    "joi": "^9.2.0",
    "json-loader": "^0.5.4",
    "jsonpack": "^1.1.5",
    "jsonwebtoken": "^7.1.9",
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.2.0",
    "koa-compress": "^2.0.0",
    "koa-favicon": "^2.0.0",
    "koa-helmet": "^2.0.0",
    "koa-json": "^2.0.2",
    "koa-router": "^7.0.1",
    "koa-send": "^3.2.0",
    "koa-static": "^3.0.0",
    "lodash": "^4.16.6",
    "ng2-translate": "^4.0.0",
    "node-sass": "^3.11.3",
    "node-uuid": "^1.4.7",
    "nodemon": "^1.11.0",
    "notp": "^2.0.3",
    "postcss-loader": "^1.1.1",
    "raw-loader": "^0.5.1",
    "remarkable": "^1.7.1",
    "rxjs": "^5.0.0-rc.2",
    "sass-loader": "^4.0.2",
    "stats-webpack-plugin": "^0.4.2",
    "string-replace-loader": "^1.0.5",
    "style-loader": "^0.13.1",
    "webpack": "2.1.0-beta.25",
    "zone.js": "^0.6.26"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "concurrently": "^3.1.0",
    "eslint-plugin-babel": "^3.3.0",
    "jsdom": "^9.8.3",
    "node-fetch": "^1.6.3",
    "nodemon": "^1.11.0",
    "nyc": "^8.4.0",
    "supertest": "^2.0.1",
    "tap-diff": "^0.1.1",
    "tap-notify": "^1.0.0",
    "thirty-two": "^1.0.2",
    "xo": "^0.17.1"
  },
  "ava": {
    "babel": "inherit",
    "files": [
      "test/*/"
    ],
    "require": [
      "babel-register",
      "./test/helpers.js"
    ]
  },
  "babel": {
    "plugins": [
      [
        "transform-decorators-legacy"
      ]
    ],
    "presets": [
      "es2015-node",
      "es2016",
      "es2017",
      "stage-1"
    ],
    "sourceMaps": true
  },
  "nyc": {
    "include": [
      "src"
    ]
  },
  "xo": {
    "envs": [
      "browser",
      "node"
    ],
    "esnext": true,
    "globals": [
      "__DEVELOPMENT__",
      "__PRODUCTION__",
      "__dirname"
    ],
    "ignores": [
      "static/**"
    ],
    "parser": "babel-eslint",
    "plugins": [
        "babel"
    ],
    "space": 2,
    "rules": {
      "ava/no-ignored-test-files": [
        0
      ],
      "babel/new-cap": [
        2
      ],
      "import/extensions": [
        0
      ],
      "import/no-unassigned-import": [
        0
      ],
      "import/no-unresolved": [
        0
      ],
      "import/no-webpack-loader-syntax": [
        0
      ],
      "import/prefer-default-export": [
        0
      ],
      "new-cap": [
        0
      ],
      "padded-blocks": [
        2,
        "always"
      ],
      "no-implicit-coercion": [
        2,
        {
          "boolean": false
        }
      ],
      "no-negated-condition": [
        0
      ],
      "no-unused-expressions": [
        2,
        {
          "allowShortCircuit": true
        }
      ],
      "no-unused-vars": [
        2,
        {
          "vars": "all",
          "args": "none"
        }
      ],
      "object-curly-spacing": [
        2,
        "always"
      ]
    }
  }
}
